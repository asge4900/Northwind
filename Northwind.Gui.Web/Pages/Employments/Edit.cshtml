@page
@model Northwind.Gui.Web.Pages.Employments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Employment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employment.EmploymentID" />
            <div class="form-group">
                <label asp-for="Employment.EmployeeID" class="control-label"></label>
                <select asp-for="Employment.EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
                <span asp-validation-for="Employment.EmployeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employment.HireDate" class="control-label"></label>
                <input asp-for="Employment.HireDate" class="form-control" />
                <span asp-validation-for="Employment.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employment.EndDate" class="control-label"></label>
                <input asp-for="Employment.EndDate" class="form-control" />
                <span asp-validation-for="Employment.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
